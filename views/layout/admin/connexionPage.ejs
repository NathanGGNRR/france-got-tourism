<%- include('../../includes/header'); %>


<body class="body-second">
    <section class="activity-header activity-header_bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="activity-header_iner text-center">
                        <h2>Administration</h2>
                    </div>
                </div>
            </div>
        </div>
	</section>
	<div class="d-flex flex-row justify-content-between w-100">
		<div class="waves-effect waves-light btn-large" id="back-button">
			<i class="fas fa-arrow-left"></i>
		</div>
		<div class="waves-effect waves-light btn-large" href="/" id="home-button">
			<i class="fas fa-home"></i>
		</div>
	</div>
	<form action="" method="POST">
		<div class="container my-5 text-center">
			<h2 class="title-part title-connexion">LOG IN</h2>
			<% if(typeof connexionError !== 'undefined') {%><h3 id="error" class="text-danger"><%= connexionError %></h3><% }%>
			<div class="input-field w-50 m-auto">
				<input id="login" name="login" type="text" class="validate">
				<label for="login" class="label-active">Login</label>
			</div>
			<div class="input-field w-50 mx-auto my-3">
					<input id="password" name="password" type="password" class="validate">
					<label for="password" class="label-active">Password</label>
			</div>

			<input type="submit" value="Connexion" class="btn">
		</div>
	</form>

</body>
<%- include('../../includes/footer'); %>